<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
            <shape>
                <gradient
                    android:startColor="#ee9a00"
                    android:endColor="#ee9a00"
                    android:angle="270" />
                <corners
                    android:radius="5dp" />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
    </item>
    <item  android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#ffa500"
                android:endColor="#ffa500"
                android:angle="270" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>